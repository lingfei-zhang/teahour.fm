        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();</script>
  </head>

  <body class="<%= page_classes %>">

    <header class="masthead">
      <hgroup>
        <h1>Teahour.fm</h1>
        <h2 class="tagline">Tea hour for geek's mind.</h2>
      </hgroup>

      <ul class="participants">
        <%= yield_content(:participants) %>
      </ul>
    </header>

    <section class="main">
      <%= yield %>
    </section>

    <nav>
      <%= yield_content(:nav) %>
    </nav>

    <footer class="footer">
      <div class="global-nav">
        <ul class="social-connect">
        <li><a href="//itunes.apple.com/cn/podcast/teahour.fm/id608387170?l=en"><i class="icons-podcast"></i></a></li>
        <li><a href="/feed.xml"><i class="icons-rss"></i></a></li>
        <li class="dropdown dropup" id="newsletter">
          <a href="#newsletter" class="dropdown-toggle" data-toggle="dropdown"><i class="icons-email"></i></a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="Newsletter">
            <li>
              <form action="http://pragmatic.us5.list-manage1.com/subscribe/post?u=73dd7c7fe45b53ba8e6ca952d&amp;id=2bcf4ff1fe" method="post" class="validate form-inline" target="_blank" novalidate style="margin-bottom:0">
                <label for="email">We're not going to spam but inspire you :)</label>
                <input type="email" value="" name="EMAIL" class="email input-large" placeholder="Email" id="email" required>
                <input type="submit" value="Subscribe" name="subscribe" class="btn btn-small btn-success">
              </form>
            </li>
           </ul>
        </li>

        <li id="github"><a href="https://gitcafe.com/teahour/site"><i class="icons-github"></i></a></li>
      </ul>

        <ul class="nav">
        <li class="dropdown dropup" id="episodes">
          <a href="#episodes" class="dropdown-toggle" data-toggle="dropdown">Episodes</a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="Episodes">
            <% selected_article = current_article || page_articles[0] %>
            <% blog.articles.each do |article| %>
              <% if selected_article == article %>
              <li class="active">
                <a href="<%= article.url %>">#<%= article.data['idx'] %> <%= article.title %></a>
              </li>
              <% else %>
              <li>
                <a href="<%= article.url %>">#<%= article.data['idx'] %> <%= article.title %></a>
              </li>
              <% end %>
            <% end %>
          </ul>
        </li>
        <li class="dropdown dropup" id="about">
          <a href="#about" class="dropdown-toggle" data-toggle="dropdown">About</a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="About">
            <li>
              <h4>Teahour.fm</h4>
              <p>
                Teahour.fm 由Terry，玎玎, Daniel, Kevin 和滚滚主持，会专注程序员感兴趣的话题，包括 Web 设计和开发，移动应用设计和开发，创业以及一切 Geek 的话题。
              </p>
              <h5>We also talk on:</h5>
              <ul class="social-buttons">
                <li><a href="//twitter.com/teahourfm" class="social-twitter"><i class="icons-twitter"></i> Twitter</a></li>
                <li><a href="//facebook.com/teahourfm" class="social-facebook"><i class="icons-facebook"></i> Facebook</a></li>
                <li><a href="//weibo.com/teahourfm" class="social-weibo"><i class="icons-weibo"></i> Weibo</a></li>
              </ul>
            </li>
          </ul>
        </li>
        <li class="dropdown dropup" id="search">
          <a href="#search" class="dropdown-toggle" data-toggle="dropdown">Search</a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="search">
            <li>
              <form class="form-inline">
                <input type="text" placeholder="eg. dingding" id="ts-search-input">
                <input type="submit" value="Search" name="subscribe" class="btn btn-small btn-success">
              </form>
            </li>
          </ul>
        </li>
        <!-- <li>
          <a href="#">Category</a>
        </li> -->
      </ul>
      </div>

      <p class="copyright">
        &copy; <%= Time.now.year %> <%= data.site.title %> <a href="//creativecommons.org/licenses/by-nc-sa/2.5/cn/" target="_blank">CC BY 2.5</a>
        <br />
        本站由 <a href="https://fengcheco.com" target="_blank" class="vendor">Fengche.co</a> 设计开发,
        感谢 <a href="//weibo.com/u/1766991917" target="_blank" class="vendor">Alaia Liu</a> 提供 Logo,
        <a href="//www.upyun.com/?md=Railscasts-china" target="_blank" class="vendor">又拍云</a>提供音频文件存储。
      </p>
    </footer>

    <!-- topics
      <span class="tag">Web</span>,
      <span class="tag">Mobile</span>,
      <span class="tag">Programming</span>,
      <span class="tag">Entreprenurship</span>,
      <span class="tag">Geeky</span>
     -->

    <%= javascript_include_tag 'main' %>
    <%= yield_content :footer %>
